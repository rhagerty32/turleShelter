<body class="bg-gray-50 font-sans">

    <div class="container mx-auto py-12 px-6">
        <div class="flex flex-row justify-between items-center">
            <a href="/events" class="px-4 py-2 mt-10 bg-gray-100 text-gray-800 rounded-md hover:bg-gray-200">Back to
                Events</a>
            <h1 class="text-3xl font-bold text-gray-800 mb-2 mt-10">
                <%= event.organization %>'s Event
            </h1>
            <div class="flex flex-row gap-4">

                <button id="editButton" onclick="openModal(event)"
                    class="px-4 py-2 bg-teal-500 text-white rounded-md hover:bg-teal-600 mt-10">
                    Edit Event
                </button>

                <button id="cancelButton" onclick="closeModal()"
                    class="px-4 py-2 bg-gray-400 text-white rounded-md hover:bg-gray-500 mt-10 hidden">
                    Cancel
                </button>
                <button id="saveButton" onclick="closeModal()"
                    class="px-4 py-2 bg-teal-500 text-white rounded-md hover:bg-teal-600 mt-10 hidden">
                    Save
                </button>
            </div>
        </div>
        <!-- ^ VIEWER -->
        <div id="viewSection" class="bg-white p-6 rounded-xl shadow-md mt-6 border">
            <div class="flex flex-row justify-between">
                <h2 class="text-2xl font-bold text-gray-800 mb-4">Event Information</h2>
                <p class="text-gray-600">
                    <%= event.address %>
                        <%= event.city %>
                            <%= event.state %>, <%= event.zip %>
                </p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-gray-700">Start Date</label>
                    <p class="mt-2 text-gray-600">
                        <%= new Date(event.date).toLocaleDateString('en-US', { weekday: 'long' , year: 'numeric' ,
                            month: 'short' , day: 'numeric' }) %> @ <%= new Date('1970-01-01T' +
                                event.starttime).toLocaleTimeString('en-US', { hour: '2-digit' , minute: '2-digit' }) %>
                                - <%= new Date(new Date('1970-01-01T' + event.starttime).getTime() +
                                    event.plannedduration.hours * 60 * 60 * 1000).toLocaleTimeString('en-US', {
                                    hour: '2-digit' , minute: '2-digit' }) %>
                    </p>
                </div>
                <div>
                    <label class="block text-gray-700">Status</label>
                    <p class="mt-2 text-gray-600 font-bold <%= event.status === 'Scheduled' ? 'text-green-600' : '' %>">
                        <%= event.status %>
                    </p>
                </div>
                <div>
                    <label class="block text-gray-700">Details</label>
                    <p class="mt-2 text-gray-600">
                        <%= event.details %>
                    </p>
                </div>
                <div>
                    <label class="block text-gray-700">Service Type ID</label>
                    <p class="mt-2 text-gray-600">
                        <%= event.servicetypeid %>
                    </p>
                </div>

                <div class="bg-white shadow-md rounded-xl p-4 border">
                    <div class="flex flex-col gap-0">
                        <h3 class="text-xl font-bold text-gray-800 mb-4">Jen's Story</h3>
                        <div class="flex flex-row gap-8">
                            <div>
                                <label class="block text-gray-700">Jen Story</label>
                                <p class="mt-2 text-gray-600">
                                    <%= event.jenstory===true ? "Requested" : "Not Requested" %>
                                </p>
                            </div>
                            <div>
                                <label class="block text-gray-700">Story Length</label>
                                <p class="mt-2 text-gray-600">
                                    <%= event.jenstorylength %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-white shadow-md rounded-xl p-4 border">
                    <div class="flex flex-col gap-0">
                        <h3 class="text-xl font-bold text-gray-800 mb-4">Predicted Attendance</h3>
                        <div class="flex flex-row gap-8">
                            <div>
                                <label class="block text-gray-700">Adults</label>
                                <p class="mt-2 text-gray-600">
                                    <%= event.adultparticipants %>
                                </p>
                            </div>
                            <div>
                                <label class="block text-gray-700">Children Under 10</label>
                                <p class="mt-2 text-gray-600">
                                    <%= event.childrenunder10 %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-white shadow-md rounded-xl p-4 border flex flex-col gap-4">
                    <div class="flex flex-col gap-0">
                        <h3 class="text-xl font-bold text-gray-800 mb-4">Equipment</h3>
                        <div class="flex flex-row gap-8 justify-between">
                            <div>
                                <label class="block text-gray-700">Basic Sewers</label>
                                <p class="mt-2 text-gray-600">
                                    <%= event.basicsewers %>
                                </p>
                            </div>
                            <div>
                                <label class="block text-gray-700">Advanced Sewers</label>
                                <p class="mt-2 text-gray-600">
                                    <%= event.advancedsewers %>
                                </p>
                            </div>
                            <div>
                                <label class="block text-gray-700">Sewing Machines</label>
                                <p class="mt-2 text-gray-600">
                                    <%= event.sewingmachines %>
                                </p>
                            </div>
                            <div>
                                <label class="block text-gray-700">Sergers</label>
                                <p class="mt-2 text-gray-600">
                                    <%= event.sergers %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bg-white shadow-md rounded-xl p-4 border flex flex-col gap-4">
                    <div class="flex flex-col gap-0">
                        <div class="flex flex-row gap-4 items-baseline">
                            <h3 class="text-xl font-bold text-gray-800 mb-4">Venue</h3>
                            <p class="text-md text-gray-600 mb-4">Address: <%= event.address %>, <%= event.city %>, <%=
                                            event.state %>
                                            <%= event.zip %>
                            </p>
                        </div>
                        <div class="flex flex-row gap-8 justify-between">
                            <div>
                                <label class="block text-gray-700">Size Requirement</label>
                                <p class="mt-2 text-gray-600">
                                    <%= event.venuesize %> sq. ft.
                                </p>
                            </div>
                            <div>
                                <label class="block text-gray-700">Rooms</label>
                                <p class="mt-2 text-gray-600">
                                    <%= event.numrooms %>
                                </p>
                            </div>
                            <div>
                                <label class="block text-gray-700">Round Tables</label>
                                <p class="mt-2 text-gray-600">
                                    <%= event.numtablesround %>
                                </p>
                            </div>
                            <div>
                                <label class="block text-gray-700">Rectangle Tables</label>
                                <p class="mt-2 text-gray-600">
                                    <%= event.numtablesrectangle %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- ^ EDITOR -->
        <div id="editSection" class="bg-white p-6 rounded-lg shadow-md mt-6 hidden">
            <h2 class="text-2xl font-bold text-gray-800 mb-4">Event Information</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                <!-- ORGANIZATION -->
                <div>
                    <label for="organization" class="block text-gray-700">Organization</label>
                    <input type="text" id="organization" value="<%= event.organization %>"
                        class="mt-2 w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-teal-500 focus:border-teal-500 outline-teal-500">
                </div>

                <!-- STATUS -->
                <div>
                    <label for="status" class="block text-gray-700">Status</label>
                    <select id="status"
                        class="mt-2 w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-teal-500 focus:border-teal-500 outline-teal-500">
                        <option value="Pending" <%=event.status==='Pending' ? 'selected' : '' %>>Pending</option>
                        <option value="Scheduled" <%=event.status==='Scheduled' ? 'selected' : '' %>>Scheduled</option>
                        <option value="Completed" <%=event.status==='Completed' ? 'selected' : '' %>>Completed</option>
                    </select>
                </div>

                <!-- START DATE/TIME -->
                <div class="grid grid-cols-3 gap-4">
                    <div>
                        <label for="date" class="block text-gray-700">Date</label>
                        <input type="date" id="date" value="<%= new Date(event.date).toISOString().split('T')[0] %>"
                            class="mt-2 w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-teal-500 focus:border-teal-500 outline-teal-500">
                    </div>
                    <div>
                        <label for="starttime" class="block text-gray-700">Start Time</label>
                        <input type="time" id="starttime" value="<%= event.starttime %>"
                            class="mt-2 w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-teal-500 focus:border-teal-500 outline-teal-500">
                    </div>
                    <div>
                        <label for="plannedduration" class="block text-gray-700">Planned Duration (hrs)</label>
                        <input type="number" id="plannedduration" value="<%= event.plannedduration.hours %>"
                            class="mt-2 w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-teal-500 focus:border-teal-500 outline-teal-500">
                    </div>
                </div>

                <!-- ADDRESS -->
                <div class="grid grid-cols-4 gap-4">
                    <div>
                        <label for="address" class="block text-gray-700">Address</label>
                        <input type="text" id="address" value="<%= event.address %>"
                            class="mt-2 w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-teal-500 focus:border-teal-500 outline-teal-500">
                    </div>
                    <div>
                        <label for="city" class="block text-gray-700">City</label>
                        <input type="text" id="city" value="<%= event.city %>"
                            class="mt-2 w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-teal-500 focus:border-teal-500 outline-teal-500">
                    </div>
                    <div>
                        <label for="state" class="block text-gray-700">State</label>
                        <input type="text" id="state" value="<%= event.state %>"
                            class="mt-2 w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-teal-500 focus:border-teal-500 outline-teal-500">
                    </div>
                    <div>
                        <label for="zip" class="block text-gray-700">Zip Code</label>
                        <input type="text" id="zip" value="<%= event.zip %>"
                            class="mt-2 w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-teal-500 focus:border-teal-500 outline-teal-500">
                    </div>
                </div>

                <!-- SERVICE TYPE -->
                <div>
                    <label for="servicetypeid" class="block text-gray-700">Service Type ID</label>
                    <input type="text" id="servicetypeid" value="<%= event.servicetypeid %>"
                        class="mt-2 w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-teal-500 focus:border-teal-500 outline-teal-500">
                </div>

                <!-- JEN RELATED STUFF -->
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label for="jenstory" class="block text-gray-700">Jen Story</label>
                        <div class="mt-2">
                            <label class="inline-flex items-center">
                                <input type="radio" name="jenstory" value="true" class="form-radio"
                                    <%=event.jenstory===true ? 'checked' : '' %>>
                                <span class="ml-2">Requested</span>
                            </label>
                            <label class="inline-flex items-center ml-6">
                                <input type="radio" name="jenstory" value="false" class="form-radio"
                                    <%=event.jenstory===false ? 'checked' : '' %>>
                                <span class="ml-2">Not Requested</span>
                            </label>
                        </div>
                    </div>
                    <div>
                        <label for="jenstorylength" class="block text-gray-700">Jen Story Length (mins)</label>
                        <input type="text" id="jenstorylength" value="<%= event.jenstorylength %>"
                            class="mt-2 w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-teal-500 focus:border-teal-500 outline-teal-500">
                    </div>
                </div>

                <!-- EQUIPMENT -->
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label for="sergers" class="block text-gray-700">Sergers</label>
                        <input type="number" id="sergers" value="<%= event.sergers %>"
                            class="mt-2 w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-teal-500 focus:border-teal-500 outline-teal-500">
                    </div>
                    <div>
                        <label for="sewingmachines" class="block text-gray-700">Sewing Machines</label>
                        <input type="number" id="sewingmachines" value="<%= event.sewingmachines %>"
                            class="mt-2 w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-teal-500 focus:border-teal-500 outline-teal-500">
                    </div>
                </div>

                <!-- ATTENDEES -->
                <div class="grid grid-cols-4 gap-4">
                    <div>
                        <label for="childrenunder10" class="block text-gray-700">Children < 10</label>
                                <input type="number" id="childrenunder10" value="<%= event.childrenunder10 %>"
                                    class="mt-2 w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-teal-500 focus:border-teal-500 outline-teal-500">
                    </div>
                    <div>
                        <label for="adultparticipants" class="block text-gray-700">Adults</label>
                        <input type="number" id="adultparticipants" value="<%= event.adultparticipants %>"
                            class="mt-2 w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-teal-500 focus:border-teal-500 outline-teal-500">
                    </div>
                    <div>
                        <label for="advancedsewers" class="block text-gray-700">Adv. Sewers</label>
                        <input type="number" id="advancedsewers" value="<%= event.advancedsewers %>"
                            class="mt-2 w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-teal-500 focus:border-teal-500 outline-teal-500">
                    </div>
                    <div>
                        <label for="basicsewers" class="block text-gray-700">Basic Sewers</label>
                        <input type="number" id="basicsewers" value="<%= event.basicsewers %>"
                            class="mt-2 w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-teal-500 focus:border-teal-500 outline-teal-500">
                    </div>
                </div>

                <!-- VENUE INFO -->
                <div class="grid grid-cols-4 gap-4">
                    <div>
                        <label for="venuesize" class="block text-gray-700">Venue Size</label>
                        <input type="text" id="venuesize" value="<%= event.venuesize %>"
                            class="mt-2 w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-teal-500 focus:border-teal-500 outline-teal-500">
                    </div>
                    <div>
                        <label for="numrooms" class="block text-gray-700">Rooms</label>
                        <input type="number" id="numrooms" value="<%= event.numrooms %>"
                            class="mt-2 w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-teal-500 focus:border-teal-500 outline-teal-500">
                    </div>
                    <div>
                        <label for="numtablesround" class="block text-gray-700">Round Tables</label>
                        <input type="number" id="numtablesround" value="<%= event.numtablesround %>"
                            class="mt-2 w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-teal-500 focus:border-teal-500 outline-teal-500">
                    </div>
                    <div>
                        <label for="numtablesrectangle" class="block text-gray-700">Rect. Tables</label>
                        <input type="number" id="numtablesrectangle" value="<%= event.numtablesrectangle %>"
                            class="mt-2 w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-teal-500 focus:border-teal-500 outline-teal-500">
                    </div>
                </div>

                <!-- DETAILS -->
                <div>
                    <label for="details" class="block text-gray-700">Details</label>
                    <textarea id="details"
                        class="mt-2 w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-teal-500 focus:border-teal-500 outline-teal-500"><%= event.details %></textarea>
                </div>
            </div>
        </div>
    </div>
    </div>

</body>

</html>
